        "requestBody": {
          "description": "User profile data",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": true,
                "properties": {
                  "email": {
                    "type": "string",
                    "description": "User email",
                    "format": "email",
                    "example": "user@gmail.com"
                  },
                  "name": {
                    "type": "string",
                    "description": "User name",
