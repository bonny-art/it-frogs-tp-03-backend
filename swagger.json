  "components": {
    "schemas": {
      "User (db)": {
        "type": "object",
        "required": [
          "name",
          "email",
          "password",
          "avatarURL",
          "verificationToken"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "User name",
            "example": "Olexandra"
          },
          "email": {
            "type": "string",
            "description": "User email",
            "format": "email",
            "example": "user@gmail.com"
          },
          "password": {
            "type": "string",
            "description": "User password",
            "example": "pAsSwOrD!"
          },
          "gender": {
            "type": "string",
            "description": "User gender",
            "enum": ["woman", "man"],
            "default": "woman",
            "example": "woman"
          },
          "avatarURL": {
            "type": "string",
            "description": "User avatar",
            "default": ""
          },
          "verificationToken": {
            "type": "string",
            "description": "e-mail verification token",
            "default": ""
          },
          "token": {
            "type": "string",
            "description": "User JWT string",
            "default": null
          },
          "verify": {
            "type": "boolean",
            "description": "Is the User e-mail address verified?",
            "default": false
          },
          "dailyWaterGoal": {
            "type": "integer",
            "format": "int32",
            "description": "User daily water norma",
            "minimum": 0,
            "maximum": 15000,
            "default": 2000,
            "example": 5000
          }
        }
      },

      "WaterRecord (db)": {
        "type": "object",
        "required": ["userId", "entryDate"],
        "properties": {
          "userId": {
            "type": "string",
            "format": "ObjectId",
            "description": "Backend-generated unique identifier",
            "example": "ObjectId('5f50c31b8e7b9e432c3fb8c3')"
          },
          "entryDate": {
            "type": "string",
            "format": "date-time",
            "description": "Date and time of data entry",
            "example": "2022-02-24T08:30:00Z"
          },
          "dailyWaterGoal": {
            "type": "integer",
            "format": "int32",
            "description": "User daily water norma",
            "minimum": 0,
            "maximum": 15000,
            "default": 2000,
            "example": 2500
          },
          "consumedWater": {
            "type": "integer",
            "format": "int32",
            "description": "User water consumption amount (ml)",
            "minimum": 0,
            "default": 0,
            "example": 250
          },
          "consumedTimes": {
            "type": "integer",
            "format": "int32",
            "description": "User water consumption amount (times)",
            "minimum": 0,
            "default": 0,
            "example": 4
          },
          "consumedWaterPercentage": {
            "type": "integer",
            "format": "int32",
            "description": "User water consumption percent (relative to the norm)",
            "minimum": 0,
            "default": 0,
            "example": 80
          },
          "waterIntakes": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["_id", "ml", "consumedAt"],
              "properties": {
                "_id": {
                  "type": "string",
                  "format": "ObjectId",
                  "description": "Backend-generated unique identifier",
                  "example": "ObjectId('5f50c31b8e7b9e432c3fb8c3')"
                },
                "ml": {
                  "type": "integer",
                  "format": "int32",
                  "description": "User water consumption amount (ml)",
                  "minimum": 0,
                  "maximum": 5000,
                  "example": 250
                },
                "consumedAt": {
                  "type": "string",
                  "format": "date-time",
                  "description": "User water consumption date and time",
                  "example": "2022-02-24T08:30:00Z"
                }
              }
            }
          }
        }
      }
    },

    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
